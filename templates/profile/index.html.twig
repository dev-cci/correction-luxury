{% extends 'base.html.twig' %}

{% block title %}Profile index{% endblock %}

{% block body %}
    <h1>Profile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Gender</th>
                <th>Adress</th>
                <th>Location</th>
                <th>Country</th>
                <th>Nationality</th>
                <th>BirthDate</th>
                <th>BirthLocation</th>
                <th>ProfilePicture</th>
                <th>Resume</th>
                <th>Passport</th>
                <th>Experience</th>
                <th>Description</th>
                <th>IsAvailable</th>
                <th>Notes</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.firstName }}</td>
                <td>{{ profile.lastName }}</td>
                <td>{{ profile.gender }}</td>
                <td>{{ profile.adress }}</td>
                <td>{{ profile.location }}</td>
                <td>{{ profile.country }}</td>
                <td>{{ profile.nationality }}</td>
                <td>{{ profile.birthDate ? profile.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ profile.birthLocation }}</td>
                <td>{{ profile.profilePicture }}</td>
                <td>{{ profile.resume }}</td>
                <td>{{ profile.passport }}</td>
                <td>{{ profile.experience }}</td>
                <td>{{ profile.description }}</td>
                <td>{{ profile.isAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ profile.notes }}</td>
                <td>{{ profile.createdAt ? profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ profile.updatedAt ? profile.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_profile_show', {'id': profile.id}) }}">show</a>
                    <a href="{{ path('app_profile_edit', {'id': profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profile_new') }}">Create new</a>
{% endblock %}
